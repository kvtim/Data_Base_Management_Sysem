@model Shop.Models.Customer

<h3>Deletion</h3>
<div>
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>
            @Html.DisplayFor(model => model.CustomerId)
        </dd>
        <dt>Name</dt>
        <dd>
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt>Surname</dt>
        <dd>
            @Html.DisplayFor(model => model.CustomerSurname)
        </dd>
        <dt>Email</dt>
        <dd>
            @Html.DisplayFor(model => model.CustomerEmail)
        </dd>
        <dt>Password</dt>
        <dd>
            @Html.DisplayFor(model => model.CustomerPassword)
        </dd>
        <dt>Registration time</dt>
        <dd>
            @Html.DisplayFor(model => model.RegistrationTime)
        </dd>
        <dt>Role id</dt>
        <dd>
            @Html.DisplayFor(model => model.RoleId)
        </dd>
    </dl>

    <div>
        <form asp-controller="CustomerManagement" asp-action="Delete" asp-route-customerId="@Model.CustomerId" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Delete" />
                <button asp-controller="CustomerManagement" asp-action="Index" class="btn btn-warning">Back</button>
            </div>
        </form>
    </div>
</div>
