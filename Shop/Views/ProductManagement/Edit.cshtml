@model Shop.Models.Product

<h3>Edit</h3>

@if (ViewData["CategoryId"] != null)
{
    <form asp-action="Edit" asp-controller="ProductManagement" asp-route-cId="@Model.CategoryId" asp-route-id="@Model.ProductId">
        <div class="form-group">
            <label asp-for="ProductName" class="control-label">Name</label>
            <input type="text" asp-for="ProductName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ProductDescription" class="control-label">Description</label>
            <input type="text" asp-for="ProductDescription" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ProductPrice" class="control-label">Price</label>
            <input type="number" asp-for="ProductPrice" class="form-control" />
        </div>
        <div class="form-group">
            <select asp-for="CategoryId">
                @foreach (Category category in (List<Category>)ViewData["CategoriesList"])
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <select asp-for="BrandId">
                @foreach (Brand brand in (List<Brand>)ViewData["BrandsList"])
                {
                    <option value="@brand.BrandId">@brand.BrandName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-success" />
            <button asp-controller="ProductManagement" asp-action="CategoryIndex" asp-route-categoryId="@Model.CategoryId" class="btn btn-warning">Back</button>
        </div>
    </form>
}
else
{
    <form asp-action="Edit" asp-controller="ProductManagement" asp-route-bId="@Model.BrandId" asp-route-id="@Model.ProductId">
        <div class="form-group">
            <label asp-for="ProductName" class="control-label">Name</label>
            <input type="text" asp-for="ProductName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ProductDescription" class="control-label">Description</label>
            <input type="text" asp-for="ProductDescription" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ProductPrice" class="control-label">Price</label>
            <input type="number" asp-for="ProductPrice" class="form-control" />
        </div>
        <div class="form-group">
            <select asp-for="CategoryId">
                @foreach (Category category in (List<Category>)ViewData["CategoriesList"])
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <select asp-for="BrandId">
                @foreach (Brand brand in (List<Brand>)ViewData["BrandsList"])
                {
                    <option value="@brand.BrandId">@brand.BrandName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-success" />
            <button asp-controller="ProductManagement" asp-action="BrandIndex" asp-route-brandId="@Model.BrandId" class="btn btn-warning">Back</button>
        </div>
    </form>
}