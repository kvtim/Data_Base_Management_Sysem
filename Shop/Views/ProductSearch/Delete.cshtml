@model Shop.Models.Product

<h3>Deletion</h3>
<div>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>Description</dt>
        <dd>
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
    </dl>

    <div>
        <form asp-controller="ProductSearch" asp-action="Delete" asp-route-id="@Model.ProductId" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Delete" />
                <button asp-controller="Category" asp-action="Index" class="btn btn-warning">Catalog</button>
            </div>
        </form>
    </div>
</div>
