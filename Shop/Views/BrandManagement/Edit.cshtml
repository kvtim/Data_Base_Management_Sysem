@model Shop.Models.Brand

<h3>Edit</h3>

<form asp-action="Edit" asp-controller="BrandManagement" asp-route-brandId="@Model.BrandId">
    <div class="form-group">
        <label asp-for="BrandName" class="control-label">Name</label>
        <input type="text" asp-for="BrandName" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-success" />
        <button asp-controller="BrandManagement" asp-action="Index" class="btn btn-warning">Back</button>
    </div>
</form>