@model Shop.Models.Category

<h3>Edit</h3>

<form asp-action="Edit" asp-controller="CategoryManagement" asp-route-categoryId="@Model.CategoryId">
    <div class="form-group">
        <label asp-for="CategoryName" class="control-label">Name</label>
        <input type="text" asp-for="CategoryName" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-success" />
        <button asp-controller="CategoryManagement" asp-action="Index" class="btn btn-warning">Back</button>
    </div>
</form>