@model Shop.Models.Category

<h3>Addition</h3>

<form asp-action="Add" asp-controller="CategoryManagement">
    <div class="form-group">
        <label asp-for="CategoryName" class="control-label">Name</label>
        <input type="text" asp-for="CategoryName" class="form-control" required />
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-success" />
        <button asp-controller="CategoryManagement" asp-action="Index" class="btn btn-warning">Back</button>
    </div>
</form>